@model ShopTARge22.Models.ChuckNorris.OpenChuckNorrisViewModel

<h1>Search Joke</h1>

<div class="container">
	<form method="post">
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<h2>Search a ChuckNorris Joke</h2>
				<label asp-for="Categories" style="font-family: Arial"></label>
				<input asp-for="Categories" class="form-control" />
				<span asp-validation-for="Categories" class="text-danger"></span>
			</div>
		</div>
		<div class="container">
			<div class="form-group col-md-offset-3" col-md-5>
				<button asp-controller="ChuckNorris" asp-action="searchjoke" class="btn btn-primary">Search</button>
			</div>
		</div>
	</form>
</div>
