@model ShopTARge22.Models.EmailViewModel

<h1>Send email</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Send email</h2>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="To" class="col-sm-2 col-form-label">To</label>
            <input asp-for="To" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Subject" class="col-sm-2 col-form-label">Subject</label>
            <input asp-for="Subject" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Body" class="col-sm-2 col-form-label">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button type="submit" asp-controller="Emails" asp-action="SendEmail" class="btn btn-primary">Send</button>
            </div>
        </div>
    </form>
</div>
