@model ShopTARge22.Models.AccuWeather.AccuWeatherViewModel;


<div class="container">
    <header class="major">
        <h2>@Html.DisplayFor(model => model.City)</h2>
    </header>
    <h2>AccuWeather for the selected city</h2>
    <ul class="features">

        <li>
            <label asp-for="Temperature" class="col-sm-2 col-form-label"></label>
            <span>@Model.Temperature °C</span>
        </li>
        <li>
            <label asp-for="TempFeelsLike" class="col-sm-2 col-form-label"></label>
            <span>@Model.TempFeelsLike °C</span>
        </li>
        <li>
            <label asp-for="Humidity" class="col-sm-2 col-form-label"></label>
            <span>@Model.Humidity %</span>
        </li>

        <li>
            <label asp-for="Pressure" class="col-sm-2 col-form-label"></label>
            <span>@Model.Pressure hPa</span>
        </li>
        <li>
            <label asp-for="WindSpeed" class="col-sm-2 col-form-label"></label>
            <span>@Model.WindSpeed km/h</span>
        </li>
        <li>
            <label asp-for="WeatherCondition" class="col-sm-2 col-form-label"></label>
            <span>@Model.WeatherCondition </span>
        </li>

</div>

<div class="container">
    <form method="get">
        <button asp-action="Index" asp-controller="AccuWeather" class="button">Back</button>
    </form>
</div>